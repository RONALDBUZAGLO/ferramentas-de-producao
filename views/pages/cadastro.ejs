<%- include('../partials/header'); %>

    
<div class="container mt-5">
    
    <a href="/"><button class="btn btn-primary">Voltar</button></a>

    <div class="card mt-2">
        <div class="card-header ">
            <h1>Cadastro de stencil</h1>
        </div>
        
        <div class="card-body">
            <form action="/gerarCode" method="POST" >
                
                <label for="codigoDoPrograma " >Código do programa</label>
                <input type="text" name="codigoDoPrograma" required  placeholder="00" class="form-control" maxlength="2" pattern="^[0-9]{2}$">

                <label for="lado" class="mt-2">Lado da placa</label>
                <input type="text" name="lado" required  placeholder="A/B" class="form-control" maxlength="1" pattern="^[AB]$">
                
                <label for="revisaoSerie" class="mt-2">Revisão/Série</label>
                <input type="text" name="revisaoSerie" required  placeholder="00" class="form-control" maxlength="2" pattern="^[0-9]{2}$">

                <label for="mf" class="mt-2">MF</label>
                <input type="text" name="mf" required  placeholder="00000" class="form-control" maxlength="5" pattern="^[0-9]{5}$">
                
                <label for="stencilId" class="mt-2">ID</label>
                <input type="text" name="stencilId" required  placeholder="0000" class="form-control" maxlength="4" pattern="^[0-9]{4}$">

                <label for="descricao" class="mt-2">Descrição do Stencil</label>
                <input type="text" name="descricao" required  placeholder="Nome do produto" class="form-control">
                
                <label for="modificacao" class="mt-2">Modificação</label>
                <input type="text" name="modificacao" required  placeholder="Modificação" class="form-control">

                <div class="row">

                    <div class="col">
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" value="salvar" name="salvar" id="salvar" checked>
                            <label class="form-check-label" for="salvar">Salvar Dados</label>
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" value="etiqueta" name="etiqueta" id="etiqueta">
                            <label class="form-check-label" for="etiqueta">Gerar Etiqueta</label>
                        </div>
                    </div>                    

                </div>        

                <button type="submit" class="btn btn-primary mt-3 form-control"> Cadastrar </button>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>